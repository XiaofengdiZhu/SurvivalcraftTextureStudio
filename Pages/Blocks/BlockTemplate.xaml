<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:SurvivalcraftTextureStudio">
    <local:FlipBooleanConverter x:Key="flipBooleanConverter"/>
    <DataTemplate DataType="{x:Type local:BlockTextureInfo}">
        <md:Card Width="120" Height="120" Margin="6">
            <Grid>
                <md:PackIcon Width="120" Height="120" Kind="Cancel"
                                      Visibility="{Binding IsTextureExist, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneWay}"/>
                <Image Width="120" Height="120" RenderOptions.BitmapScalingMode="NearestNeighbor"
                               RenderOptions.CachingHint="Cache"
                               Source="{Binding Texture, IsAsync=True}"/>
                <Border VerticalAlignment="Bottom" Background="#4C000000">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="0,0,10,0" Text="{Binding Index}"/>
                        <TextBlock Margin="0,0,10,0" Text="{Binding Name}"/>
                        <Button Content="点我"
                                        IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BlocksPage}}, Path=DataContext.IsOperatingBlocksTexture, Converter={StaticResource flipBooleanConverter}}"
                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:BlocksPage}}, Path=DataContext.ChangeImageCommand, Mode=OneTime}"
                                        CommandParameter="{Binding}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </md:Card>
    </DataTemplate>
</ResourceDictionary>