            <Storyboard x:Key="ExportButtonIconOpacityStoryboard">
                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8"/>
            </Storyboard>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer Padding="16">
            <ItemsControl x:Name="wrap" Grid.Row="1" Margin="0,12,0,0"
                          ItemsSource="{Binding BlockTexturesDictionary.Values, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        <Button x:Name="ExportBlocksTextureButton" Margin="32" HorizontalAlignment="Right"
                VerticalAlignment="Bottom" wpf:ButtonProgressAssist.IsIndeterminate="True"
                wpf:ButtonProgressAssist.IsIndicatorVisible="{Binding IsOperatingBlocksTexture}"
                IsEnabled="{Binding IsOperatingBlocksTexture, Converter={StaticResource flipBooleanConverter}}"
                ToolTip="导出"
                Command="{Binding Path=ExportBlocksTextureCommand, Mode=OneTime}">
            <Button.Style>
                <Style BasedOn="{StaticResource MaterialDesignFloatingActionLightButton}" TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExportCanceled}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" Duration="0:0:0.4" From="{StaticResource Primary200}" To="#f44336"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" Duration="0:0:0.4" From="#f44336" To="{StaticResource Primary200}"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <wpf:PackIcon Width="24" Height="24">
                <wpf:PackIcon.Style>
                    <Style BasedOn="{StaticResource {x:Type wpf:PackIcon}}" TargetType="wpf:PackIcon">
                        <Setter Property="Kind" Value="Download"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsExportComplete}" Value="True">
                                <Setter Property="Kind" Value="Check"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource ExportButtonIconOpacityStoryboard}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsExportCanceled}" Value="True">
                                <Setter Property="Kind" Value="Close"/>
                                <Setter Property="Foreground" Value="White"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource ExportButtonIconOpacityStoryboard}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ExportButtonRecover}" Value="True">
                                <Setter Property="Kind" Value="Download"/>
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource ExportButtonIconOpacityStoryboard}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </wpf:PackIcon.Style>
            </wpf:PackIcon>
        </Button>
    </Grid>
</UserControl>